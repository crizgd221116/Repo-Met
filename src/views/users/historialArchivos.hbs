<center>
    <h1>Historial de archivos {{user.name}}</h1>
</center>
<div class="container-fluid" style="margin-top: 50px;">
    <div class="container-fluid" style="margin-top: 50px; margin-bottom: 180px; width: 1024px;">
       
        {{#each archivos}}
        <div class="card card-carrera">
            <div class="card-body">
                <h4 class="card-title" style="color: #2e8a9b ;">Título: {{tituloArchivo}}</h4>

                <p class="card-text"> Archivos de la Red Metropolitana de Monitoreo Atmosférico de Quito.
                </p>
                <p class="card-text">

                    <!---Autor: <a href="" style="color: black;">{{user.name}}</a>-->

                    | Origen: <a href="" style="color: black;"> {{origen}}</a>
                    | Magnitud: <a href="" style="color: black;">{{magnitud}} </a>
                    | Estaciones: <a href="" style="color: black;">{{nombreestaciones}} </a>
                    | Descripción: <a href="" style="color: black;">{{description}}</a>
                </p>
            </div>

        </div>
        <br>

        {{/each}}


        <div class="row">

            {{#if pages}}
            <nav class="mx-auto">
                <ul class="pagination">
                    <!--Primera Pagina-->
                    {{{pg page}}}

                    <!--PÁGINAS INTERMEDIAS-->
                    {{{ap page pages}}}


                    <!--ULTIMA-->
                    {{{lp page pages}}}



                </ul>
                <h6 class="text-center">Páginas encontradas: {{pages}}</h6>
            </nav>

            {{/if}}




        </div>
    </div>