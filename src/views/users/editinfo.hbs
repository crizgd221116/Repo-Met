
    <div class="container-fluid" style="margin-bottom: 110px;">
        <div class="row">
            <div class=".col-md-4 col-sm-4 col-xs-12"></div>

            <div class=".col-md-4 col-sm-4 col-xs-12">
                <div class="form-title text-center">
                    <h4 style="font-weight: 800;"> Editar Perfil</h4>
                </div>
                <form class="formulario" action="/users/editinfo/{{user.id}}?_method=PUT" class="formulario">
                
                <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label for="textonom">Nombre </label>
                        <input type="text" class="form-control" id="textonom" placeholder="{{user.name}}" disabled >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email </label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="{{user.email}}" disabled>
                    </div>
                    <label>Género</label>
                    <div class="row">
                        <div class="form-check ml-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Masculino
                            </label>
                        </div>
                        <div class="form-check ml-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Femenino
                            </label>
                        </div>
                        <div class="form-check ml-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3">
                            <label class="form-check-label" for="flexRadioDefault3">
                                Otro
                            </label>
                        </div>
                        <div class="form-check ml-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault4">
                            <label class="form-check-label" for="flexRadioDefault4">
                                Prefiero no decirlo
                            </label>
                        </div>
                    </div>
                    <div class="form-group"></div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Título académico</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option>Ingenier@</option>
                            <option>Físic@</option>
                            <option>Matemátic@</option>
                            <option>Licenciad@</option>
                            <option>Magister</option>
                            <option>Phd</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Ocupación</label>
                        <select class="form-control" id="exampleFormControlSelect2">
                            <option>Docente Universitario</option>
                            <option>Docente de Bachillerato</option>
                            <option>Estudiante de Colegio</option>
                            <option>Estudiante de Pregrado</option>
                            <option>Estudiante de Posgrado</option>
                            <option>Investigador/a</option>
                            <option>Profesional independiente</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="textodescrip">Bio</label>
                        <textarea type="text" class="form-control" id="textodescrip"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block"><a
                            style="text-decoration:none; color: white;">Aceptar</a></button>
                </form>

            </div>
        </div>
    </div>
