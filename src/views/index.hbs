<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css"
        integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/estilos.css">




    <!------ Include the above in your HEAD tag ---------->
</head>
<nav class="navbar navbar-expand-md" style="background-color: #2e8a9b;">
    <div class="container">
        <div class="container-fluid" style="margin-top: 20px; margin-bottom: 20px;">
            <form action="">
                <select class="js-example-responsive"  style="width: 1024px;">
                    <optgroup label="Institución">
                        <option value="Inamhi">INAMHI</option>
                        <option value="Remmaq">REMMAQ</option>
                    </optgroup>
                    <optgroup label="Estación">
                        <option value="AL">Belisario</option>
                        <option value="WY">UPS</option>
                        <option value="WY">Alameda</option>
                    </optgroup>
                    <optgroup label="Magnitud">
                        <option value="WY">Temperatura</option>
                        <option value="WY">Humedad</option>
                        <option value="WY">Precipitación</option>
                        <option value="WY">Nubosidad</option>
                    </optgroup>
                </select>
                <button type="submit" class="btn btn-warning btn-sm"> <img src="/images/search.png" alt="x" /></button>
                <script>
                    $(document).ready(function () {
                        $('.js-example-responsive').select2({
                            placeholder: "Buscar"

                        });
                    });
                </script>
            </form>


        </div>
    </div>


</nav>
<div class="container-fluid" style="margin-top: 20px; margin-bottom: 180px; width: 60%;">

    {{#each allfiles}}
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">{{tituloArchivo}}</h2>
            <p class="card-text"><a>Archivo Subido:</a> {{date}}
            </p>
            <p class="card-text">
                <a >Origen:</a> <a class="card-text-a-custom"> {{origen}}</a>
                | <a>Estación: </a> <a class="card-text-a-custom">
                    {{nombreestaciones}}</a>
                {{#if (eq origen "INAMHI")}}
                
                <a>Magnitud:</a> <a class="card-text-a-custom"> {{magnitud}}</a>
            </p>

            <p class="card-text"> <a>Rango: </a> Desde: {{fechainicio}} - Hasta: {{fechafin}}
            </p>
            <button class="btn btn-primary"><a href="/users/downloadcsv/{{id}}" >CSV</a></button>
            <button class="btn btn-success"><a href="/users/downloadxlsx/{{id}}">XLSX</a></button>
            <button class="btn btn-info-2"><a href="/users/downloadtxt/{{id}}">RCLIMDEX</a></button>
            <button class="btn btn-secondary-2"><a href="/users/viewencabezados/{{id}}"
                    >Original</a></button>
            {{else}}
           
            <a>Magnitud:</a> <a class="card-text-a-custom"> {{magnitud}}</a>
            </p>

            <p class="card-text"> <a>Rango: </a> Desde: {{fechainicio}} - Hasta: {{fechafin}}
            </p>
            <button class="btn-primary"><a href="/users/downloadcsv/{{id}}">CSV</a></button>
            <button class="btn-success"><a href="/users/viewencabezados/{{id}}">XLSX</a></button>
            <button class="btn-secondary-2"><a href="/users/viewencabezados/{{id}}"
                    >Original</a></button>
            {{/if}}
        </div>
    </div>
    
    {{/each}}
    <div class="row">

        {{#if pages}}
        <nav class="mx-auto">
            <ul class="pagination">
                <!--Primera Pagina-->
                {{{pgi page}}}

                <!--PÁGINAS INTERMEDIAS-->
                {{{api page pages}}}


                <!--ULTIMA-->
                {{{lpi page pages}}}



            </ul>
            <h6 class="text-center" style="color: #2e8a9b;">Páginas encontradas: {{pages}}</h6>
        </nav>

        {{/if}}




    </div>


    </br>

</div>