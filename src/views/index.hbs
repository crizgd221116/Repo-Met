<div class="container">
    <br />
    <div class="container-fluid" style="width: 1024px;">
        <form action="">
            <select class="js-example-responsive" multiple="multiple" style="width: 930px;">
                <optgroup label="Estación">
                    <option value="AL">Belisario</option>
                    <option value="WY">UPS</option>
                    <option value="WY">Alameda</option>
                </optgroup>
                <optgroup label="Magnitud">
                    <option value="WY">Temperatura</option>
                    <option value="WY">Humedad</option>
                    <option value="WY">Precipitación</option>
                    <option value="WY">Nubosidad</option>
                </optgroup>
            </select>
            <button type="submit" class="btn btn-default"> <img src="/images/search.png" alt="x" /></button> 
            <script>
                $(document).ready(function () {
                    $('.js-example-responsive').select2({
                        placeholder: "Buscar..."

                    });
                });
            </script>
        </form>
    </div>

    <div class="container-fluid" style="margin-top: 50px; margin-bottom: 180px; width: 1024px;">
        
        {{#each allfiles}}
        <div class="card card-carrera">
            <div class="card-body">
                <h4 class="card-title" style="color: #2e8a9b ;">Titulo: {{tituloArchivo}}</h4>
                <p class="card-text">Archivo subido: {{date}}
                </p>
                <p class="card-text">
                    Autor: <a href="" style="color: black;"> </a>
                    | Origen: <a href="" style="color: black;"> {{origen}}</a>
                    | Estación: <a href="" style="color: black;"> {{nombreestaciones}}</a>
                    | Magnitud: <a href="" style="color: black;"> {{magnitud}}</a>
                </p>

                <p class="card-text">Desde: {{fechainicio}} - Hasta: {{fechafin}}</p>
                <button class="btn-primary">CSV</button>
                <button class="btn-success">XLS</button>
                <button class="btn-secondary">Original</button>
            </div>
        </div>
        </br>
        {{/each}}
        </br>

